
{
  // "showCompilerCmds": true,
  // "showLinkerCmds": true,

  "buildType": "release", // debug release
  // "osType": "windows",

  "target": "gt_base",
  "binaryType": "static",
  "sources": [
    "./source/types/f32x2.cpp",
    "./source/types/f32x3.cpp",
    "./source/types/f32x4.cpp",
    "./source/functions.cpp",
    "./source/string.cpp",
    "./source/Logger.cpp",
    "./source/filesystem.cpp",
    "./source/Image.cpp",
    "./source/Text.cpp",
    "./source/Video.cpp",
    "./source/imgUtils.cpp",
    "./source/imgUtils3d.cpp"
  ],

  "defines": {
    "all": [
      "OpenColorIO_SKIP_IMPORTS",
      "SPNG_STATIC",
      "SSE_CENTOS7"
    ],
    "debug": "GT_DEBUG",
    "windows": ["WINDOWS", "OSWin_", "WIN32"]
  },

  "flags":
  {
    "msvc": {"all": "-std:c++17", "debug" : "-MDd", "release" : "-MD"}
  },

  "incPaths": {
    "all": [
      "./include"
    ]
  },
  "extIncPaths": [
    "$EXTERNAL/libjpeg/9.2/$VARIANT/include"
    ,"$EXTERNAL/libspng/0.7.3.sse.1.0.1/$VARIANT/include"
    ,"$EXTERNAL/tga/1.0.0.sse.1.0.1/$VARIANT/include"
    ,"$EXTERNAL/openexr/3.1.5/$VARIANT/include"
    ,"$EXTERNAL/openexr/3.1.5/$VARIANT/include/Imath"
    ,"$EXTERNAL/ocio/2.1.1/$VARIANT/python-3.9.7/include"
    ,"$EXTERNAL/freetype/2.13.0/$VARIANT/libspng/python-3.9/include/freetype2"
    ,"$EXTERNAL/x264/stable.sse.1.0.1/$VARIANT/include"
    ,"$EXTERNAL/ffmpeg/5.0.1/$VARIANT/include"

    // "$EXTERNAL/include"
    // ,"$EXTERNAL/include/Imath"
    // ,"$EXTERNAL/include/freetype"
    // ,"$EXTERNAL/include/ffmpeg"
  ],

  "installPath": {
    "all": "." // "$INTERNAL_LIB"
  },

  "compiler": {
    "linux": "g++",
    "macOs": "clang++",
    "windows": "msvc-14.2"
  }
}
